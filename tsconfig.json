{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "lib": ["esnext"],
    "typeRoots": [ "./types", "./node_modules/@types"]
  },
  "exclude": [
    "node_modules"
  ]
}
